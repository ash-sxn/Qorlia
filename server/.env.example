# Copy this file to .env and update values for local development.

PORT=4000
NODE_ENV=development

APP_SECRET=replace-with-long-random-secret
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# Database connection string (PostgreSQL recommended)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/qorlia

# Stripe or Razorpay API keys (to be added later)
PAYMENTS_PROVIDER=stripe
PAYMENTS_API_KEY=

# Terraform execution configuration (placeholder)
TERRAFORM_TEMPLATE_DIR=./iac/templates
